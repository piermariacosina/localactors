%html
  %head
    %title= [@title, "Local Actors"].compact.join(" | ")
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    = stylesheet_link_tag 'application'
    = favicon_tag 'favicon.ico', :type => 'image/ico'
    = yield_content :include
  
  %body
  
  
    %section.page
      %header= partial "layouts/header"
      = yield
      %footer= partial "layouts/footer"
    %hr.footer
    <script src="/components/jquery/jquery.js" type="text/javascript"></script>
    <script src="/components/jquery.scrollTo/jquery.scrollTo.js" type="text/javascript"></script>
    <script src="/components/jquery-ui/ui/jquery.ui.core.js" type="text/javascript"></script>
    <script src="/components/jquery-ui/ui/jquery.ui.widget.js" type="text/javascript"></script>
    <script src="/components/jquery-ui/ui/jquery.ui.accordion.js" type="text/javascript"></script>
    = javascript_include_tag 'application'
    -# = Localactors.component_include_tag ('jquery/jquery.js')
